<!-- Scrolling Combat Text V0.1 -->
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/"> 
	
	<MessageFrame name="SCTD_MSGTEXT_TEMPLATE" insertMode="BOTTOM" virtual="true">
		<Size>
			<AbsDimension x="600" y="70"/>
		</Size>
		<FontString inherits="GameFontNormal" justifyH="CENTER">
			<FontHeight>
				<AbsValue val="20"/>
			</FontHeight>
		</FontString>
	</MessageFrame>
	
	<MessageFrame name="SCTD_MSGTEXT1" parent="UIParent" frameStrata="HIGH" toplevel="true" inherits="SCTD_MSGTEXT_TEMPLATE">
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="210"/>
				</Offset>
			</Anchor>
		</Anchors>
	</MessageFrame>
	
</Ui>
